<!DOCTYPE html>
<html lang="pt_BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="shortcut icon" href="/images/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="../css/media-querys.css">
    <script defer src="/js/script.js"></script>
    <title>Início</title>
</head>
<body class="body">
    <header>
        <a href="/">
            <img width="50" src="/images/icon.png" alt="Logo">
        </a>
        <a href="/alta">Em Alta</a>
        <% if(sessao) { %>
            <a href="/perfil">Perfil</a>
            <a href="/logout">Sair</a>
        <% } else { %>
            <a href="/login">Entrar</a>
            <a href="/register">Registrar</a>
        <% } %>
            
    </header>
    <main id="main">

        <!-- Imagem principal -->

        <% mains.forEach(main =>{ %>
        <a href="/post/<%= main.id %>" class="main-box-img">
            <img src="../<%= main.foto %>" class="main-img">
            <p class="title-main"><%= main.titulo %></p>
        </a>
        <% }) %>
        

        <!-- Caixas das notícias -->

        </a>
        <% posts.forEach(post => { %>
            <a href="/post/<%= post.id %>" class="box-not">
                <img src="<%= post.foto %>" class="img-not">
                <p class="desc-not"><%= post.titulo %></p>
            </a>
        <% }); %>
    </main>
</body>
</html>